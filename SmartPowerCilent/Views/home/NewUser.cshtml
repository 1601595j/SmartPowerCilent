
@{
    ViewBag.Title = "newUser";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Add New User</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div style="text-align: center">

        <h2>Enter the new user details</h2>
    </div>
    <div ng-app="smartPowerApp" ng-controller="smartPowerController">
        <form class="form-horizontal">
            <table class="table">
                <tr><td>userID </td><td><input type="text" id="userId" class="form-control" data-bind="value: userdetails().userId" /></td></tr>
                <tr><td>email</td><td><input type="text" id="email" class="form-control" data-bind="value:  userdetails().email" /></td></tr>
                <tr><td>user</td><td><input type="text" id="user" class="form-control" data-bind="value:  userdetails().user"></td></tr>
                <tr><td>password</td><td><input type="text" id="password" class="form-control" data-bind="value:  userdetails().password"></td></tr>
                <tr><td>number</td><td> <input type="text" id="number" class="form-control" data-bind="value:  userdetails().number"></td></tr>

            </table>
        </form>
        <div id="button" align="center">
            <a href="Users" data-bind="click: addUser" class="btn btn-default">Add</a>                     
        </div>
    </div>
</body>
</html>
