
@{
    ViewBag.Title = "newUser";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Add New User</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div style="text-align: center">

        <h2>Enter the new user details</h2>
    </div>
    <div ng-app="smartPowerApp" ng-controller="smartPowerController">
        <form name="signInForm" novalidate>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <p><input name="userID" type="text" placeholder="userID" required></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <p><input name="email" type="email" placeholder="Email" required></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <p><input name="user" type="text" placeholder="Username" required></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <p><input name="password" type="password" placeholder="Password" required></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <p><input name="number" type="text" placeholder="Phone Number" required></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <a href="Users" data-bind="click: addUser" class="btn btn-default">Add</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
